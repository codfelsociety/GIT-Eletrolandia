<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eletroland.appeletrolandia.TelaInicialActivity">

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_editor_absoluteX="8dp"
        app:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnSeekBar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="#60c5ea"
            android:onClick="btnSeekBar_Click"
            android:text="@string/strSeekBar"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnImageSwitcher"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:background="#2e9cc4"
            android:onClick="btnImageSwitcherClick"
            android:text="@string/strImageSwitcher"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:background="#217c9c"
            android:onClick="btnSurfaceView_Click"
            android:text="@string/strSurfaceView"
            android:textColor="#fff" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="4"
            android:columnCount="2">
            <Button
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:background="#fd8c31"
                android:text="@string/strVoltar"
                android:textColor="#fff" />
            <Button
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_marginLeft="5dp"
                android:layout_row="1"
                android:background="#e67112"
                android:text="@string/strProximo"
                android:textColor="#fff" />
        </GridLayout>
    </GridLayout>


</android.support.constraint.ConstraintLayout>
