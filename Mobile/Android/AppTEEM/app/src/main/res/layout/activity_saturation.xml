<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eletroland.appteem.Saturation">

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_editor_absoluteX="8dp"
        app:layout_editor_absoluteY="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_row="0"
            android:columnCount="3">

            <Button
                android:id="@+id/btnFogo"
                android:layout_column="0"
                android:layout_row="1"
                android:background="#fdc331"
                android:text="Fogo"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnRaio"
                android:layout_column="1"
                android:layout_marginStart="5dp"
                android:layout_row="1"
                android:background="#12a3e6"
                android:text="Raio"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnCircle"
                android:layout_column="2"
                android:layout_marginStart="5dp"
                android:layout_row="1"
                android:background="#e61212"
                android:text="Circulo"
                android:textColor="#fff" />
        </GridLayout>

        <ImageSwitcher
            android:id="@+id/imgSwitch"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_row="1"
            android:background="#b9b9b9"/>
        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:text="Saturação"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="#333"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="30dp"/>

        <SeekBar
            android:id="@+id/seekSat"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_column="0"
            android:layout_row="3"
            android:max="100"
            android:progress="50" />

        <Button
            android:id="@+id/btnVoltar2"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="5"
            android:background="#2fbe8e"
            android:onClick="btnVoltarClick"
            android:text="Voltar"
            android:textColor="#fff" />

    </GridLayout>
</android.support.constraint.ConstraintLayout>
