                            <aditionalControls:NumericUpDown x:Name="nudEstoqueMin" Grid.Column="8" VerticalAlignment="Top" Grid.ColumnSpan="5" Margin="2,430,23,0"></aditionalControls:NumericUpDown>
                            <!--#endregion-->
                            <!--#region Max Stock-->
                            <Label Grid.Column="11" Grid.ColumnSpan="4" HorizontalAlignment="Center" Margin="17,429,0,0" >Max</Label>
                            <Rectangle  Grid.Column="14" Grid.ColumnSpan="5" Margin="10,429,12,0"/>
                            <aditionalControls:NumericUpDown x:Name="nudEstoqueMax" Grid.Column="14"  VerticalAlignment="Top" Grid.ColumnSpan="5" Margin="12,430,13,0"></aditionalControls:NumericUpDown>
