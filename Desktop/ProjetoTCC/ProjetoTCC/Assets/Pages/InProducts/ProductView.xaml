                            <!--#endregion -->
                            <!--#region Weight-->
                            <Label Grid.Column="1" Grid.ColumnSpan="7" Margin="0,560,10,0" >Frete Grátis ?</Label>
                          
                            <RadioButton Name="rbFreteSim" GroupName="rbFrete" Content="Sim" IsChecked="true" Grid.Column="8" VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="3,570,13,0"></RadioButton>
