                            <Label Grid.Column="1" Grid.ColumnSpan="7" Margin="0,483,10,0" >Peso</Label>
                            <Rectangle  Grid.Column="8" Grid.ColumnSpan="11" Margin="0,483,12,0"/>
                            <TextBox Grid.Column="8" x:Name="txtPeso" VerticalAlignment="Top"  HorizontalContentAlignment="Right" Grid.ColumnSpan="11" Margin="2,485,13,0" PreviewKeyDown="txtPeso_PreviewKeyDown"></TextBox>
                            <!--#endregion -->
                            <!--#region Dimentions-->
                            <Label Grid.Column="1" Grid.ColumnSpan="7" Margin="0,521,10,0" >Dimensões</Label>
                            <Rectangle  Grid.Column="8" Grid.ColumnSpan="3" Margin="0,521,12,0"/>
