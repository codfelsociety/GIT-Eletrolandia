                            <Label Grid.Column="11" Grid.ColumnSpan="1" HorizontalAlignment="Center" Margin="0,521,10,0" >X</Label>
                            <Rectangle  Grid.Column="12" Grid.ColumnSpan="3" Margin="0,521,12,0"/>
                            <TextBox Grid.Column="12" x:Name="txtComprimento" VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="2,523,13,0" PreviewKeyDown="txtComprimento_PreviewKeyDown"></TextBox>
                            <Label Grid.Column="15" Grid.ColumnSpan="1" HorizontalAlignment="Center" Margin="0,521,10,0" >X</Label>
                            <Rectangle  Grid.Column="16" Grid.ColumnSpan="3" Margin="0,521,12,0"/>
