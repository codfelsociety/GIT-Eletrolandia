<Page x:Class="ProjetoTCC.Assets.Pages.InProducts.Reports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
      xmlns:local="clr-namespace:ProjetoTCC.Assets.Pages.InProducts"
      mc:Ignorable="d" 
      d:DesignHeight="327.068" d:DesignWidth="527.82"
      Title="Reports">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="190"/>
        </Grid.ColumnDefinitions>
        <WindowsFormsHost>
            <rv:ReportViewer x:Name="ReportViewer" />
        </WindowsFormsHost>
        <Button Name="SimpleReport" Grid.Column="1" VerticalAlignment="Top" Margin="0,5,0,0" Height="50" MaxWidth="180" Content="Relatório Simples" FontSize="17" Click="SimpleReport_Click"></Button>
        <Button Grid.Column="1" VerticalAlignment="Top" Margin="0,60,0,0" MaxWidth="180" Height="50" Content="Relatório Estoque" FontSize="17"></Button>
        <Button Grid.Column="1" VerticalAlignment="Top" Margin="0,115,0,0" MaxWidth="180" Height="50" Content="Relatório Categoria" FontSize="17"></Button>

    </Grid>
</Page>
