<UserControl x:Class="AditionalControlsWPF.RestrictedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AditionalControlsWPF"
             mc:Ignorable="d" 
             Name="txtRestricted"
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid>
        <TextBox Name="controleTxt" FontSize="15" Padding="4" Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderBrush="{Binding BorderColor, RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderThickness="1" PreviewTextInput="controleTxt_PreviewTextInput"/>
    </Grid>
</UserControl>
